#!/usr/bin/env bash
# vim: filetype=bash

source "${HOME}/.bashrc"

{{ if eq .chezmoi.os "linux" -}}

# install-packages-linux hash: {{ include "install-packages-linux" | sha256sum }}
source "${HOME}/.local/share/chezmoi/install-packages-linux"

{{ else if eq .chezmoi.os "darwin" -}}

# Install homebrew if it's not installed
if ! command -v brew &> /dev/null; then
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

eval "$(/opt/homebrew/bin/brew shellenv)"

# install-packages-macos hash: {{ include "install-packages-macos" | sha256sum }}
source "${HOME}/.local/share/chezmoi/install-packages-macos"

{{ end -}}
